<!DOCTYPE html>
<html>
  <head>
    <title>Kadai2</title>
    <meta name="viewport" content="width=device-width,initial-scale=1">
    <%= csrf_meta_tags %>
    <%= csp_meta_tag %>

    <%= stylesheet_link_tag 'application', media: 'all', 'data-turbolinks-track': 'reload' %>
    <%= javascript_pack_tag 'application', 'data-turbolinks-track': 'reload' %>
  </head>

  <body>
    <div class = "container">
      <% flash.each do |key, value| %>
        <%= content_tag(:div, value,class: "#{key}") %>
      <% end %>

      <% if logged_in? %>
        <%= link_to "一覧画面",posts_path , class: "btn btn-primary pull-right" %>
        <%= link_to "Logout", session_path(current_user.id),method: :delete, class: "btn btn-primary pull-right" %>
      <% else %>
        <%= link_to "Sign up", new_user_path, class: "btn btn-primary pull-right" %>
        <%= link_to "Login", new_session_path, class: "btn btn-primary pull-right" %>
      <% end %>

      <%= yield %>
    </div>
  </body>
</html>
