<h3>以下の内容で、送信する。</h3>

<%= form_with(model: @post, local: true ) do |f| %>
  <%= f.hidden_field :title %>
  <%= f.hidden_field :text %>
  <%= f.hidden_field :image_cache %>

  <p>タイトル:<%= @post.title %></p>
  <p>本文:<%= @post.text %></p>
  <p>画像:<%= image_tag @post.image.url if @post.image.url %>
  <%= f.submit "登録する" %>
  <%= f.submit "戻る" ,name: 'back' %>
<% end %>